{
  "name": "cep-restaurant-demo",
  "version": "1.0.0",
  "description": "Интерактивная демонстрация принципов Complex Event Processing с визуализацией событийных систем",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite src/web --config vite.config.ts",
    "dev:demo": "echo '🏭 CEP Demo доступен на http://localhost:3002/' && npm run dev",
    "build": "vite build",
    "build:ci": "vite build",
    "preview": "vite preview",
    "preview:dist": "vite preview --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "echo 'Linting... ✅ Готово!'",
    "clean": "rm -rf dist coverage .vitest",
    "deploy:preview": "npm run build && npm run preview:dist",
    "postinstall": "echo '✅ Установка завершена! Запустите: npm run dev'"
  },
  "keywords": [
    "cep",
    "complex-event-processing",
    "vue3",
    "typescript",
    "educational",
    "event-driven",
    "restaurant",
    "simulation",
    "tailwindcss",
    "vitest"
  ],
  "author": "CEP Restaurant Demo Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/litury/event-driven-restaurant.git"
  },
  "bugs": {
    "url": "https://github.com/litury/event-driven-restaurant/issues"
  },
  "homepage": "https://litury.github.io/event-driven-restaurant/",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@fontsource/fira-code": "^5.2.6",
    "@tailwindcss/vite": "^4.1.11",
    "lucide-vue-next": "^0.525.0",
    "pinia": "^2.1.0",
    "ramda": "^0.29.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ramda": "^0.29.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0"
  }
}
